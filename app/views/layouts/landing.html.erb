<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || 'Cherry' %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render 'components/favicons' %>

    <%= vite_client_tag %>
    <%= vite_javascript_tag 'application.jsx' %>
    <%= stylesheet_link_tag 'application', 'inter-font', 'data-turbo-track': 'reload' %>
    <%= stylesheet_link_tag 'tailwind', 'inter-font', 'data-turbo-track': 'reload' %>
  </head>

  <body class="dark:bg-gray-900 text-gray-800 dark:text-white">
    <%= render 'components/landing_navbar' %>

    <div class="container mt-12">
      <%= render 'components/alerts' %>
      <%= yield %>
      <%= render 'components/footer' %>
      <%= render 'components/crisp' %>
    </div>
  </body>
</html>
