<%
  project_link =
    if current_user
      user_metrics_path(project_id: project.id)
    else
      github_sign_in_path(after_sign_in_path: user_metrics_path(project_id: project.id))
    end
%>

<% dropdown_entries = [] %>
<%
  if current_user.favorited?(project)
    dropdown_entries.concat([title: 'Unfavorite', url: user_favorites_path(project_id: project.id), method: :delete])
  else
    dropdown_entries.concat(
      [title: 'Add to favorites', url: user_favorites_path(project_id: project.id), method: :post],
    )
  end
%>
<% dropdown_entries += [title: 'Delete', url: user_project_path(project), method: :delete] %>

<div class="relative">
  <div class="absolute top-2 right-0">
    <%= render 'components/dropdown', entries: dropdown_entries %>
  </div>
  <a
    href="<%= project_link %>"
    class="block p-6 pb-0 bg-white border border-gray-200 rounded-lg shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700 overflow-hidden"
  >
    <div class="flex flex-col h-full">
      <h5 class="mb-3 text-xl font-medium text-gray-900 dark:text-white flex flex-col">
        <div>
          <% if current_user.favorited?(project) %>
            <svg
              aria-hidden="true"
              class="text-yellow-400 w-7 h-7 inline"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <title>First star</title>
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path>
            </svg>
          <% end %>
          <%= project.name %>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">Owned by <%= project.user.name %></div>
      </h5>

      <% if project.reports.any? %>
        <div
          class="h-60 -mb-12 -ml-12 -mr-9"
          data-chart
          data-serie="<%= project.chart_data.sort_by(&:first).map{|x,y| {x:,y:}}.to_json %>"
          data-serie-name="<%= project.name %>"
          data-show-label="false"
        ></div>
      <% else %>
        <span class="py-16 mx-auto my-auto text-sm text-gray-500 dark:text-gray-400">No reports yet</span>
      <% end %>
    </div>
  </a>
</div>
