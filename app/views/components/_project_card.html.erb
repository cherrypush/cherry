<%
  project_link =
    if current_user
      user_metrics_path(project_id: project.id)
    else
      github_sign_in_path(after_sign_in_path: user_metrics_path(project_id: project.id))
    end
%>

<div class="relative">
  <%# TITLE %>
  <div class="absolute top-4 left-4">
    <h3 class="inline">
      <div class="flex items-center">
        <%= render 'components/favorite_button', resource: project %>
        <%= project.name %>
      </div>
      <div class="text-sm text-gray-500 dark:text-gray-400">Owned by <%= project.user.name %></div>
    </h3>
  </div>
  <%# DROPDOWN %>
  <div class="absolute top-4 right-2 flex items-center">
    <%=
      render 'components/dropdown',
             entries: [title: 'Delete forever ðŸ¥²', url: user_project_path(project), method: :delete]
    %>
  </div>
  <%# CHART %>
  <%= link_to project_link, class: "overflow-hidden w-full block p-4 pb-0 bg-white border border-gray-200 rounded-lg shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700", title: project.name do  %>
    <% if project.reports.any? %>
      <div
        class="h-60 mt-8 -ml-12 -mr-9 -mb-12"
        data-chart
        data-serie="<%= project.chart_data.sort_by(&:first).map{|x,y| {x:,y:}}.to_json %>"
        data-serie-name="<%= project.name %>"
        data-show-label="false"
      ></div>
    <% else %>
      <span class="py-16 mx-auto my-auto text-sm text-gray-500 dark:text-gray-400">No reports yet</span>
    <% end %>
  <% end %>
</div>
