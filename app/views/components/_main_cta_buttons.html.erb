<div class="md:flex justify-center gap-3">
  <%= form_tag(github_sign_in_path, method: 'post') do %>
    <button
      type="submit"
      class="btn-primary text-lg py-3 px-7 mb-3 md:mb-0 md:mr-3 uppercase flex items-center justify-center w-full"
    >
      <span class="mr-2">Try Cherry for free</span>
      <%= heroicon 'arrow-right', options: { class: 'inline' } %>
    </button>
  <% end %>

  <a
    href="https://www.youtube.com/watch?v=Kdkn31D_gto"
    target="_blank"
    class="btn-light text-lg py-3 px-6 flex items-center justify-center"
    data-modal-toggle="watch-demo-modal"
  >
    <%= heroicon 'video-camera', options: { class: 'inline' } %>
    <span class="ml-2 inline uppercase">WATCH DEMO</span>
  </a>
</div>
