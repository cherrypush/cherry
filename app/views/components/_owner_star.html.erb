<% if current_user.favorite_owner_handles.include?(owner.handle) %>
  <%= link_to user_favorites_path(owner_handle: owner.handle), data: { 'turbo-method' => :delete } do %>
    <%= heroicon 'star', options: { class: 'text-yellow-400 cursor-pointer mr-1' } %>
  <% end %>
<% else %>
  <%= link_to user_favorites_path(owner_handle: owner.handle), data: { 'turbo-method' => :post } do %>
    <%=
      heroicon 'star',
               options: {
                 class: 'text-gray-300 dark:text-gray-500 mr-1 dark:hover:text-yellow-400 cursor-pointer',
               }
    %>
  <% end %>
<% end %>
