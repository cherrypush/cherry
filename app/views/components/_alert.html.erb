<div
  id="alert"
  class="flex p-4 mb-4 bg-red-100 rounded-lg dark:bg-red-200 items-center text-red-700 dark:text-red-800"
  role="alert"
>
  <%= heroicon 'exclamation-circle' %>
  <div class="ml-2 text-sm font-medium text-red-700 dark:text-red-800">
    <%= text %>
  </div>
  <button
    type="button"
    class="ml-auto -mx-1.5 -my-1.5 bg-red-100 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex h-8 w-8 dark:bg-red-200 dark:text-red-600 dark:hover:bg-red-300"
    data-dismiss-target="#alert"
    aria-label="Close"
  >
    <span class="sr-only">Close</span>
    <%= heroicon 'x-mark' %>
  </button>
</div>
