        <% if current_user %>
          <li>
            <%=
              link_to 'My Projects',
                      user_projects_path,
                      class: controller_name === 'projects' ? 'navbar-link-active' : 'navbar-link'
            %>
          </li>
        <% else %>
          <li>
            <%=
              link_to 'Open Projects',
                      projects_path,
                      class: controller_name === 'projects' ? 'navbar-link-active' : 'navbar-link'
            %>
          </li>
        <% end %>
        <% unless current_user&.premium? %>
          <% if false %>
            <li>
              <%=
                link_to 'Pricing', pricing_path, class: action_name === 'pricing' ? 'navbar-link-active' : 'navbar-link'
